@using NZWalks.UI.Models.DTO
@model IEnumerable<NZWalks.UI.Models.DTO.RegionsDTO>
@{

}
<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
	<a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Regions</a>
</div>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Code</th>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(RegionsDTO regionsDTO in Model)
		{
			<tr>
				<td>@regionsDTO.Id</td>
				<td>@regionsDTO.Code</td>
				<td>@regionsDTO.Name</td>
				<td>
					<a asp-controller="Regions" asp-action="Edit" asp-route-id="@regionsDTO.Id" class="bt btn-light">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>